{
  "config": {
    "platform": {
      "php": "7.4"
    },
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "require": {
    "andreyryabin/sprint.migration": "^4.0",
    "andreyryabin/sprint.options": "^1.0",
    "guzzlehttp/guzzle": "7.0",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.*",
    "phpmd/phpmd": "2.*"
  },
  "extra": {
    "installer-paths": {
      "local/modules/{$name}/": [
        "type:bitrix-module"
      ]
    }
  },
  "autoload": {
    "psr-4": {
      "Lepr\\": "lib/"
    }
  }
}
